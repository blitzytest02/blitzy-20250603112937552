{
  "name": "nodejs-hello-tutorial",
  "version": "1.0.0",
  "description": "Node.js tutorial application demonstrating fundamental HTTP server concepts with Express.js v5.1.0 and a single /hello endpoint returning 'Hello world'",
  "main": "server.js",
  "type": "commonjs",
  "private": true,
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^7.1.1"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "nodejs",
    "express",
    "tutorial",
    "http-server",
    "hello-world",
    "educational",
    "web-development",
    "javascript",
    "backend"
  ],
